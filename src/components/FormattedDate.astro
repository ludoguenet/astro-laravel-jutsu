---
interface Props {
    date: Date;
}

const { date } = Astro.props;
---

<time
    datetime={date.toISOString()}
    class="flex items-center gap-x-1.5 text-gray-500 text-sm tracking-tight mt-2.5"
>
    {
        date.toLocaleDateString("fr-FR", {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
