---
import HeaderLink from "./HeaderLink.astro";
---

<header class="sticky top-0 z-20 shadow-sm shadow-gray-200 backdrop-blur-md">
  <div
    class="mx-auto px-8 container flex items-center justify-between py-4 max-w-7xl"
  >
    <div class="flex items-center gap-2 sm:gap-4">
      <a aria-label="Home" href="/">
        <img
          src="/images/logo.svg"
          class="flex w-[2.0625rem] items-center justify-center"
        />
      </a>
    </div>
    <div class="items-center">
      <HeaderLink
        href="/blog"
        class="text-sm/6 font-medium hover:text-lime-500 transition duration-200 ease-in-out"
        >Blog</HeaderLink
      >
    </div>
  </div>
</header>
