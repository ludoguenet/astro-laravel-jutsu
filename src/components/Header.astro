---
import HeaderLink from './HeaderLink.astro';
---
<div class="sticky top-0 z-10 mb-16 px-4 p-5 ring-1 ring-zinc-950/5 backdrop-blur-md bg-zinc/70 supports-backdrop-blur:bg-zinc/60 transition-colors duration-300">
    <div class="mx-auto flex items-center justify-between px-2 sm:px-4 lg:max-w-7xl">
        <div class="flex items-center gap-2 sm:gap-4">
            <a aria-label="Home" href="/">
                <div class="flex items-center gap-1 py-px pl-1 pr-3 text-xs/6 font-medium text-zinc-900">
                    <img src="/images/logo.svg" class="flex size-10 items-center justify-center" alt="">
                    Laravel Jutsu
                </div>
            </a>
        </div>
        <div class="flex items-center gap-8">
            <HeaderLink href="/blog" class="text-sm/6 font-medium hover:text-lime-500 transition duration-200 ease-in-out">
                Blog
            </HeaderLink>
        </div>
    </div>
</div>