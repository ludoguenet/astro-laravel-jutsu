import HeaderLink from './HeaderLink.astro';
---
<div class="relative z-10 mb-16 px-4 pb-5 pt-7 ring-1 ring-zinc-950/5">
		<div class="mx-auto flex items-center justify-between px-2 sm:px-4 lg:max-w-7xl">
			<div class="flex items-center gap-2 sm:gap-4">
				<a aria-label="Home" href="/">
					<div class="flex items-center gap-2 rounded-full border border-dashed border-zinc-300 py-px pl-1 pr-3 text-xs/6 font-medium text-zinc-900">
						<div class="flex h-5 w-5 items-center justify-center rounded-full bg-zinc-100 ring-1 ring-zinc-200">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 fill-zinc-900">
								<path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
							</svg>

						</div>Laravel Jutsu
					</div>
				</a>
			</div>
			<div class="flex items-center gap-8">
				<HeaderLink href="/blog" class="text-sm/6 font-medium hover:text-zinc-500 transition duration-200 ease-in-out">
					Blog
				</HeaderLink>
			</div>
		</div>
	</div>
