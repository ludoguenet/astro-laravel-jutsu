---
import HeaderLink from "./HeaderLink.astro";
import MobileHeaderLink from "./MobileHeaderLink.astro";
---

<header
  class="fixed top-0 z-50 px-4 md:px-8 w-full backdrop-blur flex-none transition-colors duration-500 lg:border-b lg:border-slate-900/10 bg-white/95 supports-backdrop-blur:bg-white/60"
>
  <div
    class="mx-auto px-4 lg:px-8 container flex items-center justify-between py-4 max-w-6xl"
  >
    <div class="flex items-center gap-2 sm:gap-4">
      <a aria-label="Home" href="/">
        <img
          src="/images/logo.svg"
          class="flex w-[2.0625rem] items-center justify-center"
        />
      </a>
    </div>
    <div class="hidden sm:flex items-center gap-8">
      <HeaderLink
        href="/blog"
        class="text-sm/6 font-medium hover:text-lime-500 transition duration-200 ease-in-out"
        >Blog</HeaderLink
      >
    </div>
    <button id="menu-toggle" class="sm:hidden rounded focus:outline-none">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
      </svg>
    </button>
  </div>

  <nav id="mobile-menu" class="hidden lg:space-x-8 lg:py-2">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <MobileHeaderLink
        href="/blog"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-900"
        >Blog</MobileHeaderLink
      >
    </div>
  </nav>
</header>

<script>
  import "../scripts/navbar.ts";
</script>
