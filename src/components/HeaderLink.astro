---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '') || pathname.startsWith(href + '/');
---

<a href={href} class:list={[className, { 'text-zinc-500 hover:text-zinc-900': isActive }]} {...props}>
	<slot />
</a>
