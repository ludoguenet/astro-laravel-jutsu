---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const newDate = new Date(date);
---

<time
  datetime={newDate.toISOString()}
  class="flex items-center gap-x-1.5 text-gray-500 text-xs tracking-tight"
>
  {
    newDate.toLocaleDateString("fr-FR", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
