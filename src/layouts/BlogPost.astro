---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="mx-auto max-w-7xl px-6 md:flex md:items-center md:justify-between lg:px-8">
			<article>
				<figure class="mt-16">
					{heroImage && <img src={heroImage} class="rounded-xl bg-gray-50 object-cover" alt="image du post" />
				</figure>

				<div class="flex items-center block text-sm leading-6 text-gray-600 my-10">
					<FormattedDate date={pubDate} />
				</div>

				<div class="prose prose-slate lg:prose-xl max-w-none">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
