---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import { SITE_TITLE } from '../consts';
const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE + " | Blog | " + title} description={description} image={heroImage.src} />
	</head>

	<body>
		<div class="w-full h-full fixed top-0 left-0 bg-white opacity-75 z-50" id="bg-loading">
			<div class="flex justify-center items-center mt-[50vh]">
				<div id="loading"></div>
			</div>
		  </div>

		<Header />

		<main class="mx-auto max-w-7xl px-6 md:flex md:items-center md:justify-between lg:px-8 mb-6 mt-12 lg:my-10">
			<article>
				<figure>
					{heroImage && <Image src={heroImage} alt={title} class="rounded-xl bg-gray-50 object-cover" />}
				</figure>

				<div class="flex items-center block text-sm leading-6 text-gray-600 my-10">
					<FormattedDate date={pubDate} />
				</div>

				<div class="prose prose-slate lg:prose-xl max-w-none">
					<slot />
				</div>
			</article>
		</main>

		<Footer />

		<script>
			document.addEventListener('astro:page-load', () => {
				document.querySelector('#bg-loading')?.classList.add('invisible');
			});
		</script>
		
		<script is:inline>
			document.addEventListener('astro:before-preparation', () => {
				document.querySelector('#bg-loading')?.classList.add('visible');
				document.querySelector('#bg-loading')?.classList.remove('invisible');
			});
			document.addEventListener('astro:after-preparation', () => {
				document.querySelector('#bg-loading')?.classList.add('invsible');
				document.querySelector('#bg-loading')?.classList.remove('visible');
			});
		</script>
	</body>
</html>
