---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import { SITE_TITLE } from '../consts';
const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE + " | Blog | " + title} description={description} image={heroImage.src} />
	</head>

	<body>
		<Header />		
		
		<main class="mx-auto max-w-7xl px-6 md:flex md:items-center md:justify-between lg:px-8 mb-6 mt-12 lg:my-10">
			<article>
				<a 
					href="/blog"
					class="inline-flex items-center rounded-full bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-600 ring-1 ring-inset ring-yellow-600/20 mb-10"
				>
					Retour
				</a>

				<figure>
					{heroImage && <Image src={heroImage} alt={title} class="rounded-xl bg-gray-50 object-cover" />}
				</figure>

				<div class="flex items-center block text-sm leading-6 text-gray-600 my-10">
					<FormattedDate date={pubDate} />
				</div>

				<div class="prose prose-slate lg:prose-xl max-w-none">
					<slot />
				</div>
			</article>
		</main>

		<Footer />
	</body>
</html>
