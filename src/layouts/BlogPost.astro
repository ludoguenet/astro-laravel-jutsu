---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import { SITE_TITLE } from '../consts';
const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE + " | Blog | " + title} description={description} image={heroImage} />
	</head>

	<body>
		<Header />

		<main class="mx-auto max-w-7xl px-6 md:flex md:items-center md:justify-between lg:px-8">
			<article>

				<span class="isolate inline-flex rounded-md shadow-sm">
				  <a href="/blog" class="relative inline-flex items-center rounded-md bg-white py-1 pl-1 pr-2 text-gray-400 cursor-pointer text-xs ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-10">
					<span class="sr-only">Previous</span>
					<svg class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
					  <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
					</svg>
					  revenir au blog
				  </a>
				</span>

				<figure class="mt-8 lg:mt-10">
					{heroImage && <img src={heroImage} class="rounded-xl bg-gray-50 object-cover" alt="image du post" />}
				</figure>

				<div class="flex items-center block text-sm leading-6 text-gray-600 my-10">
					<FormattedDate date={pubDate} />
				</div>

				<div class="prose prose-slate lg:prose-xl max-w-none">
					<slot />
				</div>
			</article>
		</main>

		<Footer />
	</body>
</html>
