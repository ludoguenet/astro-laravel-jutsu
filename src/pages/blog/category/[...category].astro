---
import {Image} from "astro:assets";
import { CollectionEntry, getCollection } from 'astro:content';
import Header from "../../../components/Header.astro";
import FormattedDate from "../../../components/FormattedDate.astro";
import BaseHead from "../../../components/BaseHead.astro";
import Footer from "../../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';

export async function getStaticPaths() {
	const posts = (await getCollection('blog'))
        .sort(
            (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
        );

    const categories: Array<string> = [];

    posts.forEach((post) => {
        categories.push(post.data.category.toLowerCase());
    });

    return Array.from(new Set(categories)).map((category) => {
        return {
            params: { category },
            props: {
                posts: posts.filter((post) =>
                    post.data.category.toLowerCase() === category,
                ),
            },
        };
    });
}

type Props = CollectionEntry<'blog'>;

const { posts } = Astro.props;
const { category } = Astro.params;

type Category = {
    name: string;
    url: string;
};

const categories: Category[] = [
    { name: 'Laravel', url: '/blog/category/laravel', },
    { name: 'PHP', url: '/blog/category/php', },
    { name: 'Pest', url: '/blog/category/pest', },
    { name: 'Eloquent', url: '/blog/category/eloquent', },
    { name: 'Vue', url: '/blog/category/vue', },
    { name: 'Outils', url: '/blog/category/outils', }
];
---
<!DOCTYPE html>
<html lang="fr">
<head>
    <BaseHead title={SITE_TITLE + " | Blog | "+category.charAt(0).toUpperCase() + category.slice(1)} description={SITE_DESCRIPTION} />
</head>
<body>      
<Header />

<div class="bg-white mb-6 mt-12 lg:my-10">

    <div class="mx-auto max-w-7xl px-6 lg:px-8 mb-16 flex justify-between items-start">
        <div>
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Tous les articles sur <span class=`text-${posts[0]?.data.colorTag}-400`>{category}</span></h2>
        </div>

        <div class="relative inline-block text-left">
            <div>
                <button
                        type="button"
                        class="inline-flex w-full justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
                        id="js-dropdown-button"
                        aria-expanded="true"
                        aria-haspopup="true"
                >
                    Catégories
                    <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>

            <div
                    style="display: none;"
                    class="absolute right-0 z-10 mt-2 w-48 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                    id="js-dropdown-menu"
                    role="menu"
                    aria-orientation="vertical"
                    aria-labelledby="menu-button"
                    tabindex="-1"
            >
                <div class="py-1" role="none">
                    <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
                    {
                        categories.map((categoryItem) => (
                                <a
                                        href={categoryItem.url}
                                        class:list={["flex items-center group text-gray-700 px-4 py-2 text-sm hover:bg-gray-100", { "text-yellow-400": categoryItem.name.toLowerCase() === category }]}
                                        role="menuitem"
                                        tabindex="-1"
                                        id="menu-item-0"
                                >
                                    {categoryItem.name}
                                </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto">
            <div class="space-y-20">
                {
                    posts.map((post) => (
                            <article class="relative isolate flex flex-col gap-8 lg:flex-row">
                                <div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
                                    <Image src={post.data.heroImage} alt={post.data.title} class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover" />
                                    <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
                                </div>
                                <div>
                                    <div class="flex items-center gap-x-4 text-xs">
                                        <time datetime="2020-03-16" class="text-gray-500">
                                            <FormattedDate date={post.data.pubDate} />
                                        </time>
                                        {post.data.category && <a href={"/blog/category/"+post.data.category.toLowerCase()} class="inline-flex items-center gap-x-1.5 rounded-md px-2 py-1 text-xs font-medium text-gray-900 ring-1 ring-inset ring-gray-200"><svg class=`h-1.5 w-1.5 fill-${post.data.colorTag}-500` viewBox="0 0 6 6" aria-hidden="true"><circle cx="3" cy="3" r="3" /></svg>{post.data.category}</a>}
                                    </div>
                                    <div class="group relative max-w-xl">
                                        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 transition ease-in-out duration-200 group-hover:text-gray-600">
                                            <a href={`/blog/${post.slug}`}>
                                                {post.data.title}
                                            </a>
                                        </h3>
                                        <p class="mt-5 text-sm leading-6 text-gray-600">{post.data.description}</p>
                                    </div>
                                    <div class="mt-6 flex border-t border-gray-900/5 pt-6">
                                        <div class="relative flex items-center gap-x-4">
                                            <img src="/avatar.jpg" alt="" class="h-10 w-10 rounded-full bg-gray-50">
                                            <div class="text-sm leading-6">
                                                <p class="font-semibold text-gray-900">
                                                    <a href="https://twitter.com/LaravelJutsu">
                                                        <span class="absolute inset-0"></span>
                                                        Ludovic Guénet
                                                    </a>
                                                </p>
                                                <p class="text-gray-600">Créateur de Laravel Jutsu</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                    ))
                    }
                    </div>
                    </div>
                    </div>
                    </div>

                    <Footer />

                    <script>
                    import "../../../scripts/dropdown.ts";
                    </script>
                    </body>
                    </html>
